<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h1 class="h4 mb-0">Edit Habit</h1>
        </div>
        
        <div class="card-body">
          <%= form_with(model: @habit, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, "Habit Name", class: "form-label fw-bold" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            
            <div class="mb-4">
              <%= form.label :description, class: "form-label fw-bold" %>
              <%= form.text_area :description, rows: 4, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= form.label :target_days, "Target Days Per Week", class: "form-label fw-bold" %>
              <%= form.number_field :target_days, in: 1..7, class: "form-control" %>
            </div>
            
            <div class="mb-3 form-check">
              <%= form.check_box :is_public, class: "form-check-input" %>
              <%= form.label :is_public, "Make this habit public?", class: "form-check-label" %>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
              <%= link_to "Cancel", habit_path(@habit), class: "btn btn-outline-secondary" %>
              <%= form.submit "Update Habit", class: "btn btn-primary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="mt-4 text-end">
        <%= button_to "Delete Habit", habit_path(@habit), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this habit?" }, 
              class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>