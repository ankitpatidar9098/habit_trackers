<h1 class="text-2xl font-bold mb-4">Your Habits</h1>

<%= link_to 'New Habit', new_habit_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
  <% @habits.each do |habit| %>
    <div class="border rounded-xl p-4 shadow">
      <h2 class="text-xl font-semibold"><%= habit.name %></h2>
      <p class="text-gray-500"><%= habit.description %></p>
      <p class="text-sm mt-2">Current Streak: <%= current_streak(habit) %></p>
      <p class="text-sm">Longest Streak: <%= longest_streak(habit) %></p>
      <%= link_to 'View', habit_path(habit), class: 'text-blue-600 hover:underline mt-2 inline-block' %>
    </div>
  <% end %>
</div>
