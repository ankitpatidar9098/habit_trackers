<h1 class="display-5 mb-4 text-primary">Your Habits</h1>

<%= link_to 'New Habit', new_habit_path, class: 'btn btn-primary px-4 py-2 mb-4 fw-medium shadow-sm' %>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
  <% @habits.each do |habit| %>
    <div class="col">
      <div class="card h-100 border-light shadow-sm hover-shadow">
        <div class="card-body">
          <h2 class="card-title h5 text-primary mb-3">
            <%= habit.name %>
          </h2>
          <p class="card-text text-muted mb-4"><%= habit.description %></p>
          
          <div class="d-flex mb-3">
            <div class="me-4">
              <p class="small text-muted mb-1">Current Streak</p>
              <p class="h5 text-purple mb-0"><%= current_streak(habit) %> <span class="text-danger">🔥</span></p>
            </div>
            <div>
              <p class="small text-muted mb-1">Longest Streak</p>
              <p class="h5 text-blue mb-0"><%= longest_streak(habit) %> <span class="text-warning">🏆</span></p>
            </div>
          </div>
        </div>
        
        <div class="card-footer bg-transparent border-top-0">
          <div class="d-flex justify-content-between">
            <%= link_to 'View', habit_path(habit), class: 'btn btn-sm btn-primary px-3' %>
            
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>