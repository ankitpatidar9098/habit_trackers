<h1 class="h2 mb-4 text-primary">Create New Habit</h1>

<div class="card mb-5 border-primary bg-light">
  <div class="card-body">
    <%= form_with(model: @habit, local: true) do |form| %>
      
      <div class="mb-3">
        <%= form.label :name, "Habit Name", class: "form-label fw-bold text-primary" %>
        <%= form.text_field :name, class: "form-control border-primary" %>
      </div>
      
      <div class="mb-4">
        <%= form.label :description, class: "form-label fw-bold text-primary" %>
        <%= form.text_area :description, rows: 4, class: "form-control border-primary" %>
      </div>
      
      <div class="d-flex justify-content-end">
        <%= form.submit "Create Habit", class: "btn btn-primary px-4 py-2 fw-bold" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Colorful Table Example -->
<div class="mt-5">
  <h2 class="h4 mb-3 text-success">Your Habits</h2>
  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead class="table-success">
        <tr>
          <th class="py-2 px-3">Habit</th>
          <th class="py-2 px-3">Description</th>
          <th class="py-2 px-3">Status</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="py-2 px-3 fw-bold text-success">Morning Run</td>
          <td class="py-2 px-3">30 minute run every morning</td>
          <td class="py-2 px-3"><span class="badge bg-success bg-opacity-10 text-success">Active</span></td>
        </tr>
        <tr>
          <td class="py-2 px-3 fw-bold text-primary">Meditation</td>
          <td class="py-2 px-3">10 minutes daily meditation</td>
          <td class="py-2 px-3"><span class="badge bg-primary bg-opacity-10 text-primary">Active</span></td>
        </tr>
        <tr>
          <td class="py-2 px-3 fw-bold text-warning">Reading</td>
          <td class="py-2 px-3">Read 20 pages every night</td>
          <td class="py-2 px-3"><span class="badge bg-warning bg-opacity-10 text-warning">Needs Work</span></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "Habit Tracker", unauthenticated_root_path, class: "btn btn-link text-primary mt-4 fw-semibold" %>