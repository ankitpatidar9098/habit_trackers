<h1 class="text-2xl font-bold mb-6">Create New Habit</h1>

<%= form_with(model: @habit, local: true, class: "max-w-lg bg-white p-6 rounded-lg shadow") do |form| %>
  
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>
  
  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
  </div>
  
  <div class="flex justify-end">
    <%= form.submit "Create Habit", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition" %>
  </div>

<% end %>

<%= link_to 'Back to Habits', habits_path, class: "inline-block mt-4 text-blue-500 hover:underline" %>
